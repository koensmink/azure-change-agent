TZ=Europe/Amsterdam

# Collector API
COLLECTOR_PORT=8088
RUN_SCHEDULE_CRON=0 7 * * *   # daily 07:00 Amsterdam
GA_ONLY=true
SECURITY_ONLY=true

# Sources enabled
INCLUDE_SOURCES=graph_message_center,m365_roadmap_api,m365_roadmap_rss,intune_whatsnew,defender_whatsnew,entra_whatsnew,azure_updates

# Graph app registration (client credentials)
GRAPH_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
GRAPH_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
GRAPH_CLIENT_SECRET=replace_me
GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0

# Keyword-based security classifier (extra filter/label)
SECURITY_KEYWORDS=MFA,Conditional Access,phishing-resistant,FIDO2,passkey,token,Key Vault,encrypt,TLS,certificate,RBAC,PIM,Privileged,Defender,Sentinel,audit,logging,policy,firewall,private endpoint,network security,App Control,ASR,attack surface reduction
